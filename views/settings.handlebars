<div class="container mt-5">
  <div class="row">
    <div class="col-sm-12 col-md-6 offset-md-3">
      <form method="post" action="/user/update">
        {{#if error}}
          <div class="alert alert-danger" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
            <strong>Oh snap!</strong> {{error.msg}}
          </div>
        {{/if}}
        {{#if successMsg}}
          <div class="alert alert-success" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
            <strong>Nice!</strong> {{successMsg}}
          </div>
        {{/if}}
        <div class="form-group">
          <label class="col-form-label col-form-label-lg" for="slackUsername">Slack Username</label>
          <div class="input-group mb-2 mr-sm-2 mb-sm-0">
            <div class="input-group-prepend">
              <div class="input-group-text">@</div>
            </div>
            <input value="{{slackUsername}}" type="text" class="form-control form-control-lg" name="slack[username]" aria-describedby="slackUsername">
          </div>
        </div>
        <div class="form-group">
          <label class="col-form-label col-form-label-lg" for="githubUsername">Github Username</label>
            <input value="{{githubLogin}}" type="text" class="form-control form-control-lg" name="github[username]" aria-describedby="githubUsernameHelp">
          <small id="githubUsernameHelp" class="form-text text-muted">Your Github username is not your email address</small>
        </div>
        <input value="{{userId}}" name="user[id]" type="hidden">
        <input value="{{rs}}" name="user[rs]" type="hidden">
        <button class="btn btn-primary float-right">Update</button>
      </form>
      <button class="btn btn-danger float-right mr-3" data-toggle="modal" data-target="#deleteUserModal">Delete</button>
    </div>
  </div>
</div>

<!-- Delete User Modal -->
<div class="modal fade" id="deleteUserModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Wait... for real?</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        Are you sure you want to delete your user? You won't receive direct messages in Slack from this bot anymore.
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Nevermind</button>
        <form method="post" action="/user/delete">
          <input type="hidden" name="user[id]" value="{{ userId }}">
          <button class="btn btn-danger">I am sure that I want to delete my user</button>
        </form>
      </div>
    </div>
  </div>
</div>
